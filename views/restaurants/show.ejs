<%- include('../partials/header') %>

<br>
<br>
<br>
<br>


<% if (successMessages && successMessages.length > 0) { %>
    <div class="alert alert-success d-flex justify-content-between">
      <div class="alert-body">
        <% successMessages.forEach(message => { %>
          <p><%= message %></p>
        <% }); %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (errorMessages && errorMessages.length > 0) { %>
    <div class="alert alert-danger d-flex justify-content-between">
        <div class="alert-body">
        <% errorMessages.forEach(message => { %>
            <p><%= message %></p>
        <% }); %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<h2><%- title %></h2>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
        <% 
            if("image" in restaurant){
                if("src" in restaurant.image){
                    if(restaurant.image.src){
                    %>
                    <img src="<%= restaurant.image.src %>" class="img-fluid" alt="<%= restaurant.name %>" referrerpolicy="no-referrer">
                    <%
                    }else{
                    %>
                        <img src="/images/restaurant.jpg" alt="restaurant image" class="dish">
                    <%
                    } 
                }else{
                    %>
                    <img src="/images/restaurant.jpg" alt="restaurant image" class="dish">
                    <%
                }
            }else{
                %>
                <img src="/images/restaurant.jpg" alt="restaurant image" class="dish">
                <%
            } 
        %>
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Title</h5>
                <p class="card-text"><%= restaurant.name %></p>
                <h5 class="card-title">Cuisine</h5>
                    <% restaurant.categories.forEach ((category) => { %>
                        <p class="card-text"><%= category.name %></p>
                    <% }); %>
                <h5 class="card-title">Description</h5>
                <p class="card-text"><%= restaurant.description %></p>
                <h5 class="card-title">Rating</h5>
                <h5>Over All Ratings</h5>
                <p class="card-text">
                  <% let count=0; %>
                  <% let total=0; %>
                  <% let avr=0 %>
                  <% restaurant.menu.forEach ((item, i) => { %>
                    <% item.reviews.forEach ((review , r) => { %>
                      <% total += review.rating; %>
                      <% count++;%>
                    <% }); %>
                  <% }); %>
                  <% if (total ===0) {%>
                    No Reviews Yet
                  <% }else {%>
                    <% avr= total/count %>
                    <%= parseFloat(avr.toFixed(2)) %>
                  <% } %>
                </p>
            </div>
        </div>
    </div>
</div>

<% if(user?.userType == "admin"){ %>
    <a href="/restaurants/<%= restaurant._id %>/items/new">Add New Item</a>
<% } %>
<div class="card-group">
    <% restaurant.menu.forEach(item => { %>
        <div class="card">
            <% 
                if("image" in item){
                    if("src" in item.image){
                        if(item.image.src){
                        %>
                        <img src="<%= item.image.src %>" class="card-img-top" alt="<%= item.name %>">
                        <%
                        }else{
                        %>
                            <img src="/images/dish.jpg" alt="dish image" class="dish">
                        <%
                        } 
                    }else{
                        %>
                        <img src="/images/dish.jpg" alt="dish image" class="dish">
                        <%
                    }
                }else{
                    %>
                    <img src="/images/dish.jpg" alt="dish image" class="dish">
                    <%
                } 
            %>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h5><%= item.name %></h5>
                        <h6>Rating</h6>
                        <p class="card-text">
                        <% let count=0; %>
                        <% let total=0; %>
                        <% let avr=0 %>
                        <% item.reviews.forEach ((review , r) => { %>
                            <% total += review.rating; %>
                            <% count++;%>
                        <% }); %>
                        <% if (total ===0) {%>
                            No Reviews Yet
                        <% }else {%>
                            <% avr= total/count %>
                            <%= parseFloat(avr.toFixed(2)) %>
                        <% } %>
                        </p>
                        <% if(user?.userType == "admin"){ %>
                            <a href="/restaurants/<%= restaurant._id %>/items/<%= item._id %>/edit">Edit Item</a>
                            <form action="/restaurants/<%= restaurant._id %>/items/<%= item._id %>?_method=DELETE" method="post">
                                <button>DELETE Item</button>
                            </form>
                        <% } %>

                        <% if(user){
                            let review = item.reviews.find(review => JSON.stringify(review.user) == JSON.stringify(user._id));
                            
                            if(review) {%>
                                <img src="<%= review.userAvatar %>" alt="" referrerpolicy="no-referrer">
                                <form action="/restaurants/<%= restaurant._id %>/items/<%= item._id %>/reviews/<%= review._id %>?_method=PUT" method="post">
                                    <input type="hidden" name="user" value="<%= user._id %>">
                                    <input type="hidden" name="userName" value="<%= user.name %>">
                                    <input type="hidden" name="userAvatar" value="<%= user.avatar %>">
                                    <label for="comment">Comment</label>
                                    <textarea name="comment" id="comment"><%= review.comment %></textarea>
                                    <label for="rating"></label>
                                    <select name="rating" id="rating">
                                        <option value="1" <%= review.rating == 1?'selected': '' %>>*</option>
                                        <option value="2" <%= review.rating == 2?'selected': '' %>>**</option>
                                        <option value="3" <%= review.rating == 3?'selected': '' %>>***</option>
                                        <option value="4" <%= review.rating == 4?'selected': '' %>>****</option>
                                        <option value="5" <%= review.rating == 5?'selected': '' %>>*****</option>
                                    </select>
                                    <button>Update Review</button>
                                </form>

                                <form action="/restaurants/<%= restaurant._id %>/items/<%= item._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                    <button>DELETE Review</button>
                                </form>
                        
                            <%}else{ %>
                                <img src="<%= user.avatar %>" alt="" referrerpolicy="no-referrer">
                                <form action="/restaurants/<%= restaurant._id %>/items/<%= item._id %>/reviews/" method="post">
                                    <input type="hidden" name="user" value="<%= user._id %>">
                                    <input type="hidden" name="userName" value="<%= user.name %>">
                                    <input type="hidden" name="userAvatar" value="<%= user.avatar %>">
                                    <label for="comment">Comment</label>
                                    <textarea name="comment" id="comment"></textarea>
                                    <label for="rating"></label>
                                    <select name="rating" id="rating">
                                        <option value="1">*</option>
                                        <option value="2">**</option>
                                        <option value="3">***</option>
                                        <option value="4">****</option>
                                        <option value="5">*****</option>
                                    </select>
                                    <button>submit</button>
                                </form>
                        <%}} %>

                        <% item.reviews.forEach((review, r) => { 
                            if(JSON.stringify(review.user) != JSON.stringify(user?._id)){%>
                                <div>
                                    <img src="<%= review.userAvatar %>" alt="" referrerpolicy="no-referrer">
                                    <h2><%= review.userName %></h2>
                                    <p><%= review.comment %></p>
                                    <h4><%= review.rating %></h4>
                                </div>
                                <% if(user?.userType == "admin") { %> 
                                    <form action="/restaurants/<%= restaurant._id %>/items/<%= item._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                        <button>DELETE Review</button>
                                    </form>
                                <% } %>
                        <% }}); %>
        
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>
<%- include('../partials/footer') %>